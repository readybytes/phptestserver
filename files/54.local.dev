<VirtualHost *:80>
  ServerName 54.local.dev
  DocumentRoot /var/www

  <FilesMatch "\.php$">
    SetHandler application/x-httpd-php5
  </FilesMatch>

  ScriptAlias /php-fcgi /usr/lib/cgi-bin/php54.fcgi
  Action application/x-httpd-php5 /php-fcgi
  AddHandler application/x-httpd-php5 .php

  <Directory "/var/www">
	Options Indexes FollowSymLinks MultiViews
	AllowOverride All
	Order allow,deny
	allow from all

  </Directory>

</VirtualHost>
